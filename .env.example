# Solana Network Configuration
NEXT_PUBLIC_SOLANA_NETWORK=devnet # or mainnet-beta
NEXT_PUBLIC_SOLANA_RPC_URL=https://api.devnet.solana.com # Your RPC URL

# API Keys
NEXT_PUBLIC_COINGECKO_API_KEY=your_coingecko_api_key # For price feeds
NEXT_PUBLIC_JUPITER_API_KEY=your_jupiter_api_key # For aggregated swaps

# Analytics and Monitoring
NEXT_PUBLIC_ANALYTICS_ID=your_analytics_id # For tracking user behavior
SENTRY_DSN=your_sentry_dsn # For error tracking

# Feature Flags
NEXT_PUBLIC_ENABLE_MOCK_TRADING=true
NEXT_PUBLIC_ENABLE_STAKING=true

# Security
NEXT_PUBLIC_MAX_SLIPPAGE=5 # Maximum allowed slippage percentage
NEXT_PUBLIC_MAX_TRANSACTION_SIZE=1000 # Maximum transaction size in SOL

# Rate Limiting
RATE_LIMIT_REQUESTS=100 # Number of requests allowed per window
RATE_LIMIT_WINDOW=60 # Time window in seconds
